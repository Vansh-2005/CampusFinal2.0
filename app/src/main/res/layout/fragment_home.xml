                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardBackgroundColor="#4D000000"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:id="@+id/pc2">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToOutline="true"
                            android:scaleType="fitXY"
                            android:id="@+id/proImg2"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pc2"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="Campus App"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardBackgroundColor="#4D000000"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:id="@+id/pc3">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToOutline="true"
                            android:scaleType="fitXY"
                            android:id="@+id/proImg3"/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pc3"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="Designing"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardBackgroundColor="#4D000000"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:id="@+id/pc4">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToOutline="true"
                            android:scaleType="fitXY"
                            android:id="@+id/proImg4"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pc4"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="Business Analysis"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardBackgroundColor="#4D000000"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:id="@+id/pc5">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:id="@+id/proImg5"/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pc5"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="DPBS App"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:cardBackgroundColor="#4D000000"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        android:id="@+id/pc6">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToOutline="true"
                            android:scaleType="fitXY"
                            android:id="@+id/proImg6"/>
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pc6"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:text="Campus App"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/project_scroll"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/community_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="28dp"
                android:gravity="top"
                android:text="@string/communities"
                android:textAppearance="@style/communities" />

            <TextView
                android:id="@+id/more_community"
                android:layout_width="40dp"
                android:layout_height="14dp"
                android:layout_marginLeft="190dp"
                android:gravity="right|top"
                android:text="@string/more_"
                android:textAppearance="@style/more_" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/community"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="52dp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="320dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:clipToOutline="true"
                app:cardBackgroundColor="#4D000000"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:id="@+id/CommImg1"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"
                    android:text="Go Green"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="28dp"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_margin="20dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/join_btn_bg"
