<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2F49"
    tools:context=".ui.search.SearchFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/search_bg"
                android:drawableRight="@drawable/search_icon"
                android:hint="@string/search_hint"
                android:textAppearance="@style/search_hint"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textColorHint="#70FFFFFF">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/project_lay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4D000000"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/event2"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/upcoming_ev3"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textAppearance="@style/upcoming_ev3"
                        android:background="#80000000" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/three_star"
                        android:elevation="18dp"
                        android:padding="10dp"
                        />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4D000000"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/campus_logo"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/projects"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textAppearance="@style/projects"
                        android:background="#80000000" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/two_star"
                        android:elevation="18dp"
                        android:padding="10dp"
                        />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/project_lay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project_lay1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4D000000"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/comminity2"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Communities"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textAppearance="@style/upcoming_ev3"
                        android:background="#80000000" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/five_star"
                        android:elevation="18dp"
                        android:padding="10dp"
                        />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4D000000"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/campus_logo" />

                    <TextView
                        android:id="@+id/upcoming_ev"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/upcoming_ev3"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textAppearance="@style/upcoming_ev3"
                        android:background="#80000000" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/three_star"
                        android:elevation="18dp"
                        android:padding="10dp"
                        />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/project_lay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/project_lay2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4D000000"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/campus_logo" />

                    <TextView
                        android:id="@+id/upcoming_ev"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/upcoming_ev3"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textAppearance="@style/upcoming_ev3"
                        android:background="#80000000" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/three_star"
                        android:elevation="18dp"
                        android:padding="10dp"
                        />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#4D000000"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/campus_logo" />

                    <TextView
                        android:id="@+id/upcoming_ev"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/upcoming_ev3"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:textAppearance="@style/upcoming_ev3"
                        android:background="#80000000" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/three_star"
                        android:elevation="18dp"
                        android:padding="10dp"
                        />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>