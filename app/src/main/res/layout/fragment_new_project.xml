<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c2f49"
    tools:context=".ui.newproject.NewProjectFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
       >

        <Button
            android:id="@+id/Community_btn"
            android:layout_width="131dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="Communities"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Project_btn"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/event_btn"
            android:layout_width="131dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="Events"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/Project_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/Project_btn"
            android:layout_width="131dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="Projects"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_margin="14dp"
            app:layout_constraintBottom_toTopOf="@+id/Community_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_btn"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>